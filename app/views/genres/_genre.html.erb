<% @genres.each do |genre| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li>
          <span class="badge">
            <%= link_to genre.name, genre_path(genre) %>
          </span>
        </li>
        <li><small><%= pluralize(genre.articles.count, "entries") %></small></li>
      </div>
    </div>
  </ul>
<% end %>



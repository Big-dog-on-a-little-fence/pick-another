<h1 align = "center" class="jumbotron">All Genres</h1>
<div align = "center">
  <% @genres.each do |genre| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{genre.name}", genre_path(genre) %>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
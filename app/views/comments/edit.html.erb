<div class="panel-body">
  <div class="form-group">
    <%= form_for [@comment.commentable, @comment] do |f| %>
      <%= f.text_area :body, placeholder: "Add a reply", class: "form-control" %>
      <%= f.submit "Update", class: "reply-button" %>
      <%= hidden_field_tag :url, params[:url].to_s %>
    <% end %>
  </div>
  <div class="form-group">
    [ <%= link_to "Cancel request", :back %> ]
  </div>
</div>
<!-- TUNE (CREATE) ACTIVITY PARTIAL-->

<div class="alert alert-success" role="alert">
  <i class="fa fa-lg fa-music activity-icon"></i>
  <% if activity.owner %>
    <%= link_to activity.owner.username, activity.owner, {:class => "alert-link"} %> added the tune
  <% end %>
  <% if activity.trackable %>
    <%= link_to activity.trackable.name, activity.trackable, {:class => "alert-link"} %> to the database
  <% else %>
    which has since been removed
  <% end %>
</div>


<%= render "shared/errors", obj: @jam %>

<div class="panel-body">
  <%= form_for @jam do |f| %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Select musicians:" %><br>
      <%= f.collection_check_boxes :user_ids, User.all, :id, :username do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
    <div class="form-group">
        <%= f.submit %>
    </div>
    <div class="form-group">
      [ <%= link_to "Cancel request and return to dashboard", root_path %> ]
    </div>
  <% end %>
</div> <!-- end panel-body -->

<div class="well">
  <h1 align="center"><strong><%= @tune.name %></strong></h1>
  <div class="row">
    <h1 align="center"><%= @tune.key %></h1>
    <h2 align="center">
      <% @tune.genres.each do |genre| %>
        <%= genre.name %>
      <% end %>
    </h2>
  </div>
</div>

<div align="center">
  <%= button_to "Generate Random Tune", jam_path(@jam), :method => :get, :class => 'btn btn-lg btn-danger'%>
</div>
<br><br>

<hr>
<div class="row">
  <ul class="list-group col-md-6 col-md-offset-3">
    <li align="center" class="list-group-item list-group-item-info">
      <h4><strong>(<%= @jam.users.count %>) Jam Participants</strong></h4>
    </li>
    <% @jam.users.each do |user| %>
      <li align="center"  class="list-group-item">
        <h4><%= link_to(user.username, user_path(user)) %></h4>
      </li>
    <% end %>
  </ul>
</div>
<br>

<h3>You have <%= @tunes.count %> tunes in common:</h3>
<br>

<%= render 'jam', obj: @tunes %>
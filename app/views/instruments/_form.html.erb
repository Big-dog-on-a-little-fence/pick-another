<%= render "shared/errors", obj: @instrument %>

<div class="panel-body">
  <%= form_for [:user, @instrument] do |f| %>
    <div class="form-group required">
    <%= f.select :type, Instrument.types - @user_instrument_types %>
    <%= f.submit %>
    </div>
    <div class="form-group">
      [ <%= link_to "Cancel request and return to dashboard", user_path(current_user) %> ]
    </div>
  <% end %>
</div> <!-- end panel-body -->

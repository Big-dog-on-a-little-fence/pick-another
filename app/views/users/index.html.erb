<h1 align="center" class="jumbotron">All Musicians</h1>

<div align="center">
  <%= paginate @users %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="username">
            <h4>
              <%= link_to user.username, user_path(user) %>
            </h4>
          </li>
          <li>
          <% if user.instruments.any? %>
            <% user.instruments.each do |instrument| %>
              <%= image_tag(instrument.type + '.svg', :class => 'svg-xxs', :title => instrument.type.downcase) %>
            <% end %>
          <% else %>
            (instruments not identified)
          <% end %>
          </li>
          <li><small><%= pluralize(user.tunes.count, "tune") %></small></li>
          <li><small><%= pluralize(user.articles.count, "recording") %></small></li>
          <li><small><%= pluralize(user.comments.count, "comment") %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
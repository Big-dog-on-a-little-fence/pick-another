<h1 align="center">All Diddlers and Nose-pickers</h1>
<div align="center">
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li class="article-title">
              <%= link_to user.email, user_path(user) %>
            </li>
            <li><small><%= pluralize(user.articles.count, "article") %></small></li>
          </div>
        </div>
      </ul>
    <% end %>
</div>
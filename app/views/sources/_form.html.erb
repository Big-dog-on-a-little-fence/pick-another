<%= render "shared/errors", obj: @source %>

<div class="panel-body">
  <%= form_for [@tune, @source] do |f| %>
    <div class="form-group">
      <%= f.label :version %><br>
      <%= f.text_field :version, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :link %><br>
      <%= f.text_field :link, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, autofocus: true, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= f.submit %>
    </div>
    <div class="form-group">
      [ <%= link_to "Cancel request and return to tune's resources", tune_path(@tune) %> ]
    </div>
  <% end %>
</div> <!-- end panel-body -->

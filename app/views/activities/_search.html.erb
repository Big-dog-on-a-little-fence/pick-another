<br>
<div class="row well">
  <div class="container">
    <%= search_form_for q_obj, url: path, html: { method: :get } do |f| %>
      <div class="form-group form-inline">
        <%= f.label :trackable_type_eq, "Filter by activity type: " %>
        <%= f.collection_select :trackable_type_eq, @activity_types, :to_s, :to_s, include_blank: "All activities", class: "form-control" %>
      </div>
      <div class="actions">
        <button type="submit" class="btn btn-default">
          <i class="fa fa-search header-icon-pad-right" aria-hidden="true"></i>
          Search
        </button>
      </div>
    <% end %>
  </div><!-- /input-group -->
</div><!-- /row -->
<%= render "shared/errors", obj: @lyric %>

<div class="panel-body">
  <%= form_for [@tune, @lyric] do |f| %>
    <div class="form-group">
      <%= f.label :version %><br>
      <%= f.text_field :version, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body %><br>
      <%= f.text_area :body, autofocus: true, class: "form-control", rows: "25" %>
    </div>
    <div class="form-group">
        <%= f.submit %>
    </div>
    <div class="form-group">
      [ <%= link_to "Cancel request and return to tune page", tune_path(@tune) %> ]
    </div>
  <% end %>
</div> <!-- end panel-body -->
